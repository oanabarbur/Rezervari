@model Licenta2.ViewModels.EquipmentFormViewModel
@{
    ViewBag.Title = Model.Nume;
}

<h2>@Model.Nume</h2>

@using (Html.BeginForm("Save", "Equipments"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Equipment.Name)
        @Html.TextBoxFor(m => m.Equipment.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Equipment.CategoryId)
        @Html.DropDownListFor(m => m.Equipment.CategoryId, new SelectList(Model.Category, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Equipment.NumberInStock)
        @Html.TextBoxFor(m => m.Equipment.NumberInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Equipment.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
